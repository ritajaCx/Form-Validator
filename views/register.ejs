    <body>
        <center>
            <h1>Member Registration Form </h1>
            <div class="formb">
            <div class="form">
        <form action="/savedata" method="post">
            

            <label> Name </label>
            <input type="text" name="name">
            <br><br> 
            <label> Username </label>
            <input required type="text" name="username"></input>
            <br><br>
            <label> Password </label>
            <input required type="password" name="password" ></input>
            <br><br>
            <label> Confirm Password </label>
            <input style="margin-right: 70px;" required type="password" name="passwordcnf" ></input>
            <br><br>
            <label> Contact </label>
            <input required type="text" name="contact"></input>
            <br><br>
            <label style="margin-right: 50px;">Indian</label>
            <input a type="radio" id="indian" value="true" >Yes</input>
            <input a type="radio" id="indian" value="false">No</input>
            <br><br><br>
            <button class="button" type="submit">Register</button>
     
        </form>
    </div>
            </div>
    </center>
    </body>
